{
  "name": "@komplett/themed",
  "version": "0.1.0",
  "description": "All you need for SCSS-based dynamic styling!",
  "type": "module",
  "private": false,
  "keywords": [
    "CSS",
    "SCSS",
    "Themes"
  ],
  "author": "Janis Jansen",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.scss",
    "./modifiers": "./dist/modifiers.scss",
    "./utils": {
      "import": "./dist/index.js",
      "types": "./dist/index.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier . --write",
    "prepublishOnly": "pnpm install && pnpm build"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "prettier": "^3.4.2",
    "sass": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "^4.5.0"
  }
}
